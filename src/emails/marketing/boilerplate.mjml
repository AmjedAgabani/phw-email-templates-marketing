    <!-- Header text desktop -->
    <mj-style>
      @media (min-width: 480px) {
        .header-text-desktop {
          font-size: 38px;
          line-height: 48px;
        }
      }
    </mj-style>

    <!-- Body text positioning desktop -->

    <mj-style>
      @media (min-width: 480px) {
        .body-text-padding-desktop {
          padding-right: 260px !important;
        }
      }
    </mj-style>

    <!-- Header background positioning desktop -->

    <mj-style>

      @media (min-width: 480px) {
      .header-background-position-desktop > div > table {
      background-size: cover !important;
      background-position: unset !important;
      }
      }
    </mj-style>

    <!-- Button sizing desktop -->

    <mj-style>
      @media (min-width: 480px) {
      .button-sizing-desktop > table {
      width: 240px !important;
      }
      }
    </mj-style>

    <!-- Responsive -->

    <mj-style>
      @media (min-width: 480px) {
      .hidden-desktop {
      display: none;
      }
      }

      @media (max-width: 480px) {
      .hidden-mobile {
      display: none;
      }
      }

      @media (min-width: 480px) {
      .desktop-padding > div > table > tbody > tr > td {
      padding: 0 40px !important;
      }
      }
    </mj-style>
